extends base
block title
	= post.title + " - " + site.title
block content
	.post.normal-post
		h1.title= post.title
		.span-date= post.date.format('%B %d, %Y')
		if post.tags
			p.tags Tags:
				for tag in post.tags
					a(href="/tags/{{tag}}")= tag

		.post-body= post.content
		.other_posts
			if pre_one
				a.pre(href='{{pre_one.url}}', title='Previous Post')
					span &lt; {{ pre_one.title }}
			if next_one
				a.next(href='{{next_one.url}}', title='Next Post')
					span {{ next_one.title }} &gt;
	#disqus_thread
		button#load-disqus(onclick="disqus.load();")加载评论