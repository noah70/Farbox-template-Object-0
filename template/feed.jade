doctype xml
+set_content_type('application/xml')
feed(xmlns="http://www.w3.org/2005/Atom")
	title= site.title
	description= site.content.escaped
	link(href="https://yu.gg/")
	link(ref="self", href="http://yanyu.farbox.com/feed")
	id= site._id
	if posts
		updated= posts[0]['date'].strftime('%Y-%m-%dT%H:%M:%SZ')
	for post in posts
		entry
			post_url = 'https://' + 'yu.gg' + post.url.escaped
			title= post.title.escaped
			link(href=post_url, rel="alternate")
			updated= post.date.strftime('%Y-%m-%dT%H:%M:%SZ')
			id= post.url_path.escaped
			author
				name= "Yu"
			summary(type="html")= '请前往原文查看详细内容'