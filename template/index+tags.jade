extends base
block content
	for post in posts
		if post.metadata.refer
			.post.ref-post
				h2.title
					a(target='_blank', href=post.metadata.refer)= post.title
					span â†’
				.span-date= post.date.format('%B %d, %Y')
				.comment-body.abstract-content= post.content
		else
			.post.link-title-post
				h2.title
					a(href=post.url)= post.title
				.span-date
					span= post.date.format('%B %d, %Y')
				.post-body.abstract-content= post.content.opening or post.content.limit(400)
			.continue-reading
				a(href=post.url) Continue reading

	if paginator.has_pre or paginator.has_next
		.pagenation
			if pager.has_pre
				a.pre(href=pager.pre_url, title='Previous Page')
					i.fa.fa-arrow-circle-left.fa-3x
			if pager.has_next
				a.next(href=pager.next_url, title='Next Page')
					i.fa.fa-arrow-circle-right.fa-3x